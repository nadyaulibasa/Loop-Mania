<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView  pickOnBounds="true" preserveRatio="true"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
            <image>
                  <Image url="@../../images/Title.png" />
            </image>
      </ImageView>
      <!-- clicking button should start/resume the game -->
      <!-- <Button fx:id="gamemode" mnemonicParsing="false" text="Gamemode : Standard" onAction="#selectGamemode"/> -->
      <ImageView fx:id="gamemode" pickOnBounds="true" preserveRatio="true" onMouseClicked='#selectGamemode'  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
           
      </ImageView>
      <ImageView fx:id="startGameButton" pickOnBounds="true" preserveRatio="true" onMouseClicked='#switchToGame'  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
            <image>
                  <Image url="@../../images/start_game.png" />
            </image>
      </ImageView>
      <!-- <Button fx:id="startGameButton" onAction="#switchToGame" text="Start Game" /> -->
      
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
</VBox>
